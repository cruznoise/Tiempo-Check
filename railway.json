{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --access-logfile - app.app:app",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5
  }
}
